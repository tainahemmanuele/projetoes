<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.sugar.collection.collectionsugar">

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
            android:name="DATABASE"
            android:value="colecao.db"/>
        <meta-data
            android:name="VERSION"
            android:value="1"/>
        <meta-data
            android:name="QUERY_LOG"
            android:value="true"/>
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.sugar.collection.collectionsugar.entities"/>

        <activity
            android:name=".activities.RegisterActivity"
            android:label="Register New Account"/>
        <activity android:name=".activities.MainActivity"/>
        <activity android:name=".activities.collection.AddCollectionActivity"/>
        <activity android:name=".activities.item.AddItemActivity"/>
        <activity android:name=".activities.AddCategoryActivity"/>
        <activity android:name=".activities.ListCategoryActivity"/>
        <activity android:name=".activities.ListAttributeActivity"/>
        <activity android:name=".activities.item.ListItemActivity"/>
        <activity android:name=".activities.item.ViewItemActivity"/>
        <activity android:name=".activities.collection.ViewCollectionActivity">
        </activity>
    </application>

</manifest>